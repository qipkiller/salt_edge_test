<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <h2 class="fw-bold mb-2 text-uppercase">Sing Up</h2>


              <div class="form-outline form-white mb-4">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg",  value:"a.sarev000@gmail.com" %>
                <%= f.label :email, class: "form-label" %><br />
              </div>

              <div class="form-outline form-white mb-4">
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg", value:"c4zZfx8aK"  %>
                <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
                <%= f.label :password, class: "form-label" %><br />
              </div>

              <div class="form-outline form-white mb-4">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg", value:"c4zZfx8aK"  %>
                <%= f.label :password_confirmation, class: "form-label" %><br />
              </div>
              <%= f.submit "Sign up", class:"btn btn-outline-light btn-lg px-5" %>


              <div class="d-flex justify-content-center text-center mt-4 pt-1">
                <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
              </div>
            <% end %>
            </div>

            <div>
              <p class="mb-0">If you have account <a href="<%= new_session_path(resource_name) %>" class="text-white-50 fw-bold">Sign In</a>
              </p>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>